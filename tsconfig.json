{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"types" : [
			"chai",
			"chai-as-promised",
			"mocha",
			"node",
			"ora"
		]
	},
	"exclude": [
		"node_modules",
		"test/**/*.ts",
	],
	"include": [
		"src/**/*.ts"
	]
}