{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6", "es2015"],
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"strict": true,
		"types": ["node"],
		"esModuleInterop": true,
	},
	"exclude": [
		"node_modules",
		"test/**/*.ts",
	],
	"include": [
		"src/**/*.ts"
	]
}